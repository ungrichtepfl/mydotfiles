# vim: filetype=.mailcap

text/html; ~/.config/neomutt/openfile.sh %s; nametemplate=%s.html
text/html; w3m -I %{charset} -T text/html -dump; copiousoutput;
text/plain; $EDITOR %s;

application/pdf; ~/.config/neomutt/openfile.sh %s;

application/pgp-encrypted; gpg -d '%s'; copiousoutput;
application/pgp-keys; gpg --import '%s'; copiousoutput;
application/x-subrip; $EDITOR %s;

image/*; ~/.config/neomutt/openfile.sh %s;
video/*; ~/.config/neomutt/openfile.sh %s;
audio/*; ~/.config/neomutt/openfile.sh %s;

# MS Word documents
application/msword; ~/.config/neomutt/openfile.sh %s;
application/vnd.ms-excel; ~/.config/neomutt/openfile.sh %s;
application/vnd.openxmlformats-officedocument.presentationml.presentation; ~/.config/neomutt/openfile.sh %s;
application/vnd.openxmlformats-officedocument.wordprocessingml.document;  ~/.config/neomutt/openfile.sh %s;
application/vnd.oasis.opendocument.text; ~/.config/neomutt/openfile.sh %s;
