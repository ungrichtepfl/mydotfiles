# vim: filetype=.mailcap

text/html; ~/.config/neomutt/openfile.sh %s; nametemplate=%s.html
text/html; w3m -I %{charset} -T text/html; copiousoutput;
text/plain; $EDITOR %s;

application/pdf; ~/.config/neomutt/openfile.sh %s;

application/pgp-encrypted; gpg -d '%s'; copiousoutput;
application/pgp-keys; gpg --import '%s'; copiousoutput;
application/x-subrip; $EDITOR %s;

image/*; ~/.config/neomutt/openfile.sh %s;
video/*; ~/.config/neomutt/openfile.sh %s;
audio/*; ~/.config/neomutt/openfile.sh %s;
