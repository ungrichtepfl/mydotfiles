# vim: filetype=neomuttrc

set my_name = "Christoph Ungricht"
set imap_check_subscribed
set editor = "nvim"

# Set preferred view modes
auto_view text/html text/calendar application/ics # view html automatically
auto_view application/pgp-encrypted
alternative_order text/plain text/calendar text/enriched text/html

# main options
unset crypt_use_gpgme # TODO: Check why opening signed mail hangs
set new_mail_command = 'bash -c "notify-send \"New Email in %f\""'
set use_envelope_from
set edit_headers                     # show headers when composing
set fast_reply                       # skip to compose when replying
unset ask_cc                         # if you want ask for CC:
set fcc_attach                       # save attachments with the body
set forward_format = "Fwd: %s"       # format of subject when forwarding
set empty_subject = "Re: "
set forward_decode                   # decode when forwarding
set attribution_intro = "On %d, %n wrote:" # format of quoting header
set reply_to                         # reply to Reply to: field
set reverse_name                     # reply as whomever it was to
set include                          # include message in replies
set forward_quote                    # include message in forwards
set text_flowed
unset sig_dashes                     # no dashes before sig
set mime_forward                   # forward attachments as part of body
unset help                           # No help bar at the top of index
set tmp_dir = ~/.cache/neomutt/temp # where to keep temp files
set attach_save_dir = ~/Downloads
set history=5000

unset confirm_append      # don't ask, just do!
set quit                 # don't ask, just do!!
set beep_new             # bell on new mails
set thorough_search      # strip headers and eval mimes before searching
set timeout = 0
set mail_check = 5
set mail_check_stats = yes
set mail_check_stats_interval = 5

# status bar, date format, finding stuff etc.
set status_chars = " *%A"
set status_format = "[ Folder: %f ] [%r%m messages%?n? (%n new)?%?d? (%d to delete)?%?t? (%t tagged)? ]%>â”€%?p?( %p postponed )?"
set date_format = "%d.%m.%Y %H:%M"
set sort = threads
set sort_aux = reverse-last-date-received
set uncollapse_jump
set sort_re
set reply_regex = "^(([Rr][Ee]?(\[[0-9]+\])?: *)?(\[[^]]+\] *)?)*" # TODO: Check if it works with german
set quote_regex = "^( {0,4}[>|:#%]| {0,4}[a-z0-9]+[>|]+)+" # TODO: Try to understand
set send_charset = "utf-8:iso-8859-1:us-ascii"
set charset = "utf-8"
set arrow_cursor = "no" # Change `color indicator` depending

# Pager View Options
set pager_index_lines = 10  # Shows 10 lines of index when pager is active
set pager_context = 3
set pager_stop
set menu_scroll
set tilde
unset markers

set mailcap_path = ~/.config/neomutt/mailcap
set header_cache_compress_method = "zstd"
set header_cache_compress_level = 3
set header_cache = "~/.cache/mutt"
set message_cache_dir = "~/.cache/mutt"
set certificate_file = "~/.mutt/certificates"

