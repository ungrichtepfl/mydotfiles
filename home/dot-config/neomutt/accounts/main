# vim: filetype=muttrc
set folder = ~/Mail/Personal    # set to the primary account's folder
set spoolfile  = +INBOX  # NOTE: Needed otherwise not working
set mbox_type = maildir
set nm_default_url = "notmuch://$HOME/Mail"
set nm_query_type = "threads"

set query_command = "notmuch address from:/%s/"
set query_format="%4c %t %-70.70a %-70.70n %?e?(%e)?"

folder-hook ~/Mail/Personal/ 'source ~/.config/neomutt/accounts/switch; \
                              source ~/.config/neomutt/accounts/personal'

# NOTE: Add new mailboxes and folder hook here:
#  Also, to not forget to add the account to ./home/dot-config/isyncrc and ./home/dot-config/goimapnotify/
#  Otherwise syncing will not work

