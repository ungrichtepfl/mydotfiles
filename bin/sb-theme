#!/bin/sh
# Utility functions for theming statusbar scripts.

dark="#424242"
light="#535353"
warning="#ffd218"
critical="#f44336"
foreground="#FFFFFF"

echo="echo"

display_noline() {
    echo="echo -n"
    display "$@"
}

display() {
    if [ -n "$2" ]; then
        background="$2"
        if [ "$background" = "$warning" ]; then
            foreground="#000000"
        fi
    else
        case "$(basename "$0")" in
            sb-music) background=$dark ;;
            sb-network) background=$light ;;
            sb-disk) background=$dark ;;
            sb-memory) background=$light ;;
            sb-loadavg) background=$dark ;;
            sb-mic) background=$light ;;
            sb-record) background=$dark ;;
            sb-volume) background=$light ;;
            sb-battery) background=$dark ;;
            sb-date) background=$light ;;
            *) background="#FFFFFF" ;;
        esac
    fi


    case "$STATUSBAR" in
        dwmblocks) $echo "^b$background^^c$foreground^  $1  " ;;
        *) $echo "$1" ;;
    esac
}


