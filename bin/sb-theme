#!/bin/sh
# Utility functions for theming statusbar scripts.

display() {
    if [ -n "$2" ]; then
        color="$2"
    else
        case "$(basename "$0")" in
            sb-music) color="#00FFFF" ;;
            sb-disk) color="#00FF00" ;;
            sb-memory) color="#FFFFFF" ;;
            sb-swap) color="#00FF00" ;;
            sb-loadavg) color="#FFFF00" ;;
            sb-mic) color="#FF0000" ;;
            sb-record) color="#FF0000" ;;
            sb-volume) color="#FFFFFF" ;;
            sb-battery) color="#00FFFF" ;;
            sb-date) color="#0000FF" ;;
            sb-network) color="#FF0000" ;;
            *) color="#FFFFFF" ;;
        esac
    fi

    case "$STATUSBAR" in
        dwmblocks) echo "^c$color^$1" ;;
        *) echo "$1" ;;
    esac
}
